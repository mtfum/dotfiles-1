root = true

[*.swift]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.raml]
indent_style = space
indent_size = 2

[*.{tx,tsx}]
indent_style = space
indent_size = 2

[*.{js,jsx,raml,coffee}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{Fastfile,Rakefile,Podfile}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
