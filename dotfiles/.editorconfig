root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.coffee]
indent_style = space
indent_size = 2

[*.swift]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[.yml]
indent_style = space
indent_size = 2

[.raml]
indent_style = space
indent_size = 2

[Podfile]
indent_style = space
indent_size = 2

[Fastfile]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.jsx]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
