root = true

[.swift]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.swift]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[.yml]
indent_style = space
indent_size = 2

[.raml]
indent_style = space
indent_size = 2

[*.{js,jsx,Podfile,Rakefile,Fastfile,raml,coffee}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
