root = true

[*.{swift,yml,yaml,raml,tx,tsx,js,jsx,coffee,rb,json,cr,stencil,proto}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{Fastfile,Rakefile,Podfile}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

